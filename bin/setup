#!/usr/bin/env sh
set -euo pipefail
IFS=$'\n\t'

bundle install

# Other automated setup tasks

[ "$#" -eq 1 ] && [ "-r" = "$1" ] && {
    rm -r ./app/db/store ||:
    cp config/secrets.yml.example config/secrets.yml
}

mkdir -p ./app/db/store ||:

bundle exec rake db:migrate
RACK_ENV=test bundle exec rake db:migrate
