# frozen_string_literal: true

source 'https://rubygems.org'

# Web API
gem 'json'
gem 'puma'
gem 'roda'

# Configuration
gem 'figaro'
gem 'rake'
gem 'rbnacl'
gem 'require_all'

# Database
gem 'hirb'
gem 'sequel'
group :development, :test do
  gem 'sqlite3'
end

# Testing
group :test do
  gem 'minitest'
  gem 'minitest-rg'
  gem 'rack-test'
end

# Security
gem 'bundler-audit'

# Development
gem 'pry'
gem 'rerun'
gem 'rubocop'
