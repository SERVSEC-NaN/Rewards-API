# frozen_string_literal: true

source 'https://rubygems.org'

# Web API
gem 'json'
gem 'puma'
gem 'rack-cors', require: 'rack/cors'
gem 'roda'

# Configuration
gem 'figaro'
gem 'rake'
gem 'rbnacl'
gem 'require_all'

# Database
gem 'passphrase'
gem 'sequel'

group :development, :test do
  gem 'hirb'
  gem 'pry'
  gem 'rerun'
  gem 'rubocop'
  gem 'rubocop-minitest'
  gem 'rubocop-rake'
  gem 'rubocop-sequel'
  gem 'sqlite3'
end

# Testing
group :test do
  gem 'minitest'
  gem 'minitest-rg'
  gem 'rack-test'
end

# Security
gem 'bundler-audit'
